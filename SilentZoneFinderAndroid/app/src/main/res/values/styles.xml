<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KakaoLabelTextStyle" parent="LabelTextStyle">
        <item name="mapTextSize">28</item>
        <item name="mapTextColor">#FF1E88E5</item>
        <item name="mapTextStrokeWidth">2</item>
        <item name="mapTextStrokeColor">#AA000000</item>
    </style>

    <style name="SilentFilledButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.SZF.Button.Primary" parent="Widget.Material3.Button">
        <item name="cornerRadius">32dp</item>
        <item name="android:backgroundTint">@color/primary_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SZF.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/place_detail_outline_button</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SZF.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipMinHeight">32dp</item>
        <item name="chipBackgroundColor">@color/chip_filter_bg</item>
        <item name="chipStrokeColor">@color/chip_filter_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textColor">@color/chip_filter_text</item>
        <item name="rippleColor">@color/chip_filter_stroke</item>
    </style>

    <style name="MarkerLabelTextStyle" parent="LabelTextStyle">
        <item name="mapTextSize">26</item>
        <item name="mapTextColor">#FFFFFFFF</item>
        <item name="mapTextStrokeWidth">3</item>
        <item name="mapTextStrokeColor">#66000000</item>
    </style>
</resources>


