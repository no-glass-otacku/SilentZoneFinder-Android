<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/markerDbTextView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/noise_marker_circle_bg"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="52" />

    <TextView
        android:id="@+id/markerStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="Good" />

    <TextView
        android:id="@+id/markerPlaceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/marker_place_name_bg"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingHorizontal="6dp"
        android:paddingVertical="3dp"
        tools:text="Honor Cafe" />

</LinearLayout>

